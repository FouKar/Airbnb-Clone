<div class="album py-5">
  <div class="container">
    <h2>Rooms Currently Available</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {{#each data}}
        <div class="col mt-3">
          <div class="card shadow-sm">
            <img src="{{this.image}}" height="225px" alt="" />
            <div class="card-header text-center"><b>{{this.title}}</b></div>
            <div class="card-body">
              <p class="card-text">{{this.location}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-danger"
                  >Book Now</button>

                </div>
                <small class="text-success">{{this.price}}</small>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
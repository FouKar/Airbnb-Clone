<div class="album py-5 bg-light">
  <div class="container">
    <h2 class="text-center">Rooms Currently Available</h2>
    <form method="post" action="/room/search">
      <div class="mt-4 mb-4 input-group d-flex flex-row justify-content-center">
        <div class="form-outline">
          <input
            id="search-input"
            type="search"
            id="form1"
            class="form-control"
            placeholder="Search City"
            name="city"
          />

        </div>
        <button type="submit" class="btn btn-danger">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </form>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      {{#each data}}
        <div class="col mt-3">
          <div class="card shadow-sm">
            <img src="/{{this.file}}" height="225px" alt="" />
            <div class="card-header text-center"><b>{{this.title}}</b></div>
            <div class="card-body">
              <p class="card-text">{{this.location}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-danger"
                  >Book Now</button>

                </div>
                <small class="text-success">{{this.price}}</small>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>